---
{% for post in site.posts %}
  {% unless post.categories contains 'training' %}
    "{{ post.url | slugify }}": {
      "title": "{{ post.title | xml_escape }}",
      "url": "{{ post.url | xml_escape }}",
      "summary": "{{ post.content | strip_html | strip_newlines | xml_escape }}"
    }
    {% unless forloop.last %},{% endunless %}
  {% endunless %}
{% endfor %}
